                        {
                            <span class="badge badge-warning">Son 50 Ürün!</span>
                        }

                        <span class="product-number">#564556</span>
                    </div>
                </div>
                <div class="row mt-1">
                    <div class="col-md-12">
                        <div id="description">
                            @ViewBag.Product.Description
                        </div>
                    </div>

                </div>
                <div class="row mt-2">
                    <div class="col-md-4">
                        <span style="color:#FFD700;">
                            <i class="fas fa-star"></i>
                        </span>
