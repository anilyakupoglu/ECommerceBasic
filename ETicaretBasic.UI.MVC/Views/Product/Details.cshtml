
@{
    ViewBag.Title = "Details";
}

    <div class="container mb-5">
        <div class="row mt-5">
            <div class="col-md-6">
                <img src="~/Upload/@ViewBag.Product.Image" class="img-fluid rounded">
            </div>
            <div class="col-md-6">
                <div class="row mt-1">
                    <div class="col-md-12">
                        <h2>@ViewBag.Product.ProductName</h2>
                    </div>
                </div>
                <div class="row mt-1">
                    <div class="col-md-12">
                        <span class="badge badge-primary">Stokta var  </span>
